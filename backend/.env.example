# 越南摩托汽车网站 - 后端环境配置示例
# 复制此文件为 .env 并修改相应的配置值

# 服务器配置
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# 数据库配置 (SQLite)
DB_TYPE=sqlite
DB_PATH=./vietnam_moto_auto.sqlite
DB_LOGGING=true

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置 - 请在生产环境中更改这些密钥
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif
ALLOWED_DOCUMENT_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# 邮件配置 (可选) - 请填入真实的SMTP配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@vietnammoto.com
FROM_NAME=Vietnam Moto Auto

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS配置
CORS_ORIGIN=http://localhost:3000,http://localhost:4321
CORS_CREDENTIALS=true

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_KEYS=1000

# 搜索配置
SEARCH_RESULTS_PER_PAGE=20
MAX_SEARCH_RESULTS=100

# 图片处理配置
IMAGE_QUALITY=80
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=200
LARGE_IMAGE_WIDTH=1200
LARGE_IMAGE_HEIGHT=800

# API配置
API_VERSION=v1
API_PREFIX=/api

# 分页配置
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# 会话配置 - 请在生产环境中更改这个密钥
SESSION_SECRET=your-session-secret-change-this
SESSION_MAX_AGE=86400000

# 开发模式配置
DEBUG=vietnam-moto:*
VERBOSE_LOGGING=true